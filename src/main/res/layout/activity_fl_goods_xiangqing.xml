<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.www.jingdong.Activity.FlGoodsXiangqingActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/xq_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/leftjiantou"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_xq"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/tv_xqtit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三只松鼠京东自营,爆款地址199-100" />

        <TextView
            android:id="@+id/tv_xqprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.00"
            android:textColor="#f7072b" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_xqgwc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="0.5"
        android:background="#f00534"
        android:textColor="#FFFFFF"
        android:text="加入购物车" />

</LinearLayout>
