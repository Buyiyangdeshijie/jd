<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bwei.www.jingdong.Activity.FlGoodsListActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:id="@+id/btn_back"
            android:background="@drawable/leftjiantou"/>
        <Button
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/so"
            android:id="@+id/btn_sou"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:src="@drawable/kind_liner"
            android:id="@+id/btn_lis"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aba3a3"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aba3a3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aba3a3"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/good_rv">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
